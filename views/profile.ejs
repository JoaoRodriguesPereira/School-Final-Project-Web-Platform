<body>

  <p class="bemvindo" id="nome_utilizador"></p>

  <script>
    firebase.auth().onAuthStateChanged(function (user) {

      if (user) {
        var user = firebase.auth().currentUser;

        if (user != null) {
          var email = user.email;
          document.getElementById('nome_utilizador').innerHTML = "Bem-vindo " + email;
        }

        var email1 = email.replace(".", "-");
        var viagens = firebase.database().ref('/Utilizadores/' + email1);

        viagens.on('value', function (dados) {
          for (var x in dados.val().Viagens) {
            //debugger;
            console.log(dados.val().Viagens[x].end);
            document.getElementById('viagens').innerText = dados.val().Viagens[x].start;
          }

        });

      } else {
        window.alert("No user logged");
        window.location = '/';
      }
    });

    function logout() {
      firebase.auth().signOut().then(function () {
        // Sign-out successful.
      }).catch(function (error) {
        // An error happened.
      });
    }
  </script>

