<script>
    firebase.auth().onAuthStateChanged(function (user) {

        if (user) {

            var user = firebase.auth().currentUser;

            var email = user.email;
            document.getElementById("utilizador").innerHTML = email;
            alert("Bem-vindo " + email);
            var latlng = [];
            var i;
            var Veiculos = firebase.database().ref('/Veiculos');
            Veiculos.once('value', function (dados) {
                dados.forEach(function (childDados) {
                    var matricula = childDados.key;
                    var condutor = childDados.child("Última Localização").child("Condutor").val();
                    var latitude = childDados.child("Última Localização").child("latitude").val();
                    var longitude = childDados.child("Última Localização").child("longitude").val();
                    if (childDados.child("Última Localização").exists()) {
                        L.marker([latitude, longitude]).addTo(mymap).bindPopup("<b>Veiculo: </b>" + matricula + "<br/><b>Condutor: </b>" + condutor).openPopup();
                        latlng.push([latitude, longitude]);
                        var markerBounds = L.latLngBounds(latlng);
                        mymap.fitBounds(markerBounds);
                        i++;
                    }
                });
            });
            if (i == 0) {
                window.alert("Não existem veiculos com viagens!");
            }
        } else {
            window.alert("No user logged");
            window.location = '/';
        }
    });

    var mymap = L.map('map_div_admin').setView([1, 1], 10);;

    L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token=pk.eyJ1IjoiODExMDQxMiIsImEiOiJja2FndjNseXIwMmFnMzZ0aWZkZzJ2NXZ0In0.26eWZfSrEKchdsxDNeUcvg', {
