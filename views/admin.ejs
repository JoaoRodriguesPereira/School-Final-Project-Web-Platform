<script type="text/javascript">
    google.charts.load('current', { 'packages': ['corechart', 'bar'] });
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {

        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Veículo');
        data.addColumn('number', 'Número de Encomendas');

        var array = [];

        firebase.auth().onAuthStateChanged(function (user) {

            var Veiculos = firebase.database().ref('Veiculos/');

            Veiculos.once('value', function (dados) {
                dados.forEach(function (childDados) {
                    var cont = 0;
                    childDados.forEach(function (data) {
                        if (data.key.length == 10) {
                            data.child("Encomendas").forEach(function (encomenda) {
                                if (encomenda.child("Entregue").val() == "Sim") {
                                    cont++;
                                }
                            });
                        }
                    });
                    array.push([childDados.key, cont]);
                });

                data.addRows(array);

                var options = {
                    title: 'Encomendas entregues por veículo',
                    chartArea: { width: '50%' },
                    hAxis: {
                        title: 'Nº Encomendas entregues',
                        minValue: 0
                    },
                    vAxis: {
                        title: 'Matricula'
                    },
                    backgroundColor: '#f1f8e9'
                };
                var chart = new google.visualization.BarChart(document.getElementById('bar_chart'));

                chart.draw(data, options);
            });
        });
    }
</script>

